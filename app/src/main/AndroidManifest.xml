<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wcreation.vadan">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplassScreen"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity android:name=".EnglishJokeImage"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>
        <activity
            android:name=".EnglishLoveImage"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".EnglishImageView"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".EnglishMotiImage"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".SinhalaJokeImage"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity android:name=".HomePage">

        </activity>
        <activity
            android:name=".SinhalaLoveImage"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".SinhalaImageView"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.wcreation.vadan.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_provider_paths" />
        </provider>
    </application>

</manifest>